<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu"
    android:background="@drawable/blacktexture"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:background ="@drawable/background02">

        <com.solutions.secondorder.SOSSteelBeamLite.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:layout_weight=".1" app:numDots="NoDots"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/dark_background_piece"
            android:layout_weight=".373"
            >
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".10"/>
                <!--Note: layout_weights are at their most predictable when
                used with empty linear layouts.
                The fewer attri-->
            <ImageButton
                android:id="@+id/shapes"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".375"
                android:layout_gravity = "center"
                android:padding="@dimen/icon_horizontal_margin"
                android:clickable="true"
                android:background="@null"
                android:src="@drawable/button_menu"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                />
            <ImageButton
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".125"
                android:padding="@dimen/icon_horizontal_margin"
                android:clickable="true"
                android:onClick="about"
                android:background="@null"
                android:src="@drawable/button_about"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".527">
            <ImageButton
                android:id="@+id/menu_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="@null"
                android:src="@drawable/menu_image"
                android:scaleType="fitCenter"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

